@model IEnumerable<UserViewModel>

@{
    string studentName = ViewData["StudentName"].ToString();
    string age = ViewData["StudentAge"].ToString();
    string stdName = ViewBag.StudentName;
    int age1 = ViewBag.Title;
    var student = TempData["Student"];
}

<p>Welcome to students page.</p>
<p>Student name is @studentName and his age is @age y.o.</p>
<p>Student name is @stdName and age is @age1</p>
<p>Student name is @student</p>


<a class="nav-link text-dark" asp-controller="Student" asp-action="New">New</a>

<a class="nav-link text-dark" asp-controller="Student" asp-action="UserPage">User</a>

<a class="btn btn-outline-primary" asp-controller="Student" asp-action="StudentCreate">Create new student</a>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <p>Image is empty.</p>
                    }
                    else
                    {
                        <img style="width: 50px" src="@item.ImageUrl" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Email</td>
                <td>
                    <form asp-controller="Student" asp-action="Delete" method="post">
                        <input type="hidden" name="email" value="@item.Email"></input>
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>    
        
        
        }
    </tbody>

</table>

